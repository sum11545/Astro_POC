---
const title = "SEO Website";
const description =
  "This is a simple SEO-optimized Astro site for testing how well Google ranks it.";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://astro-poc-olive.vercel.app/" />

    <!-- OG tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://astro-poc-olive.vercel.app/" />
    <meta property="og:image" content="https://yourdomain.com/og-image.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://yourdomain.com/og-image.png" />
  </head>
  <body>
    <h1>Welcome to My SEO Astro Site</h1>
    <p>This site is built to test Google SEO ranking.</p>
    <a href="/about">Go to About Page</a>
  </body>
</html>
